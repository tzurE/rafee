<div class="panel">
  <div class="row">
    <div class="small-3 columns"><strong>ID</strong></div>
    <div class="small-9 columns">{{model.id}}</div>
  </div>
  <div class="row">
    <div class="small-3 columns"><strong>Name</strong></div>
    <div class="small-9 columns">{{model.name}}</div>
  </div>
  <div class="row">
    <div class="small-3 columns"><strong>Interval</strong></div>
    <div class="small-9 columns">{{model.transitionInterval}}</div>
  </div>
  <div class="row">
    <div class="small-3 columns"><strong>Team</strong></div>
    <div class="small-9 columns">{{link-to model.team.name "admin.teams.team" team}}</div>
  </div>
</div>

{{#if templates}}
  <div class="panel">
    <h4>Templates</h4>
    {{#each template in templateList}}
    <div>
      {{link-to template.name "admin.templates.template" template.key}}
    </div>
    {{/each}}
  </div>
{{/if}}
